@inject NavigationManager NavigationManager

<link href="NavMenu.razor.css" rel="stylesheet" />
<div class="box">
    <div class="group">
        <!-- Static rectangles -->
        <div class="rectangle"></div>
        <div class="div"></div>
        <div class="rectangle-3"></div>

        <!-- Dynamic rectangle for login/register toggle -->
        <div class="rectangle-2" @onclick="ToggleLoginRegister">
            <div class="text-wrapper">@_loginRegisterText</div>
        </div>
    </div>
</div>

@code {
    private string _loginRegisterText = "Login";

    private void ToggleLoginRegister()
    {
        _loginRegisterText = _loginRegisterText == "Login" ? "Register" : "Login";
        string route = _loginRegisterText == "Login" ? "/login" : "/register";
        NavigationManager.NavigateTo(route);
    }
}
